@model  Campeonato.Dominio.TimeCampeonato

@{
    ViewBag.Title = "Futebol Lima Duarte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid">
    <h2>Times participantes</h2>

    @using (Html.BeginForm("SelecionarTimes", "Campeonato"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <input type="hidden" name="idCampeonato" value="@Model.IdCampeonato">
        <table class="table table-striped">
            <tr>
                <td></td>
                <td>
                    Time
                </td>
            </tr>
            @foreach (var item in Model.Times)
            {
                <tr>
                    <td>
                        <div class="display-label">
                            <img src="~/Content/images/escudo/@item.EscudoPequeno" height="100">
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Nome)
                    </td>
                </tr>
            }
        </table>
    }
    <div>
        @Html.ActionLink("Voltar", "Index")
    </div>

