@model IEnumerable<Campeonato.Dominio.FotosVideos>

    @{
        ViewBag.Title = "Futebol Lima Duarte";
    }
    <!--Importar os scripst e css-->
    <link rel="stylesheet" type="text/css" href="~/Content/galeria/style.css" />
    <script type="text/
            script" src="~/Content/galeria/jquery.js"></script>

    <div id="wowslider-container1">
        <div class="ws_images">

            <ul>
                @foreach (var item in Model)
                {
                    if (item.Video.Equals("1"))
                    {
                        <iframe width="560" height="315" src="@item.Caminho" frameborder="0" allowfullscreen></iframe>
                    }
                    else
                    {
                        <li><img src="@item.Caminho" alt="@item.Descricao" title="@item.Descricao" id="wows1_0" /></li>
                    }
                }
            </ul>
        </div>
    </div>
    <script type="text/javascript" src="~/Content/galeria/wowslider.js"></script>
    <script type="text/javascript" src="~/Content/galeria/script.js"></script>
    <br />
    <br />

    @foreach (var item in Model)
    {
        if (item.Video.Equals("1"))
        {<div style="text-align:center">
            <iframe width="560" height="315" src="@item.Caminho" frameborder="0" allowfullscreen></iframe>
        </div>
        }
    }


