@model Campeonato.Dominio.Partida

@{
    ViewBag.Title = "Futebol Lima Duarte";
}
<style>
    .comment input {
        width: 18px;
        height: 20px;
    }

    .invisivel {
        display: none;
    }
</style>

@using (Html.BeginForm("Salvar", "Bolao"))
{
    @Html.AntiForgeryToken()

        <h4>Partida</h4>
        <hr />
        @Html.ValidationSummary(true)
       <div class="invisible"> @Html.HiddenFor(model => model.Id)</div>
        <div>
            <table class="table" style="table-layout:fixed; width: 350px" align="center" border="2">
