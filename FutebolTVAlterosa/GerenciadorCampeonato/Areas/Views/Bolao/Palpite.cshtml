                    <td width="40" style="text-align:center">
                        <img src="~/Content/images/escudo/@Model.EscudoPequenoMandante" height="100">
                    </td>
                    <td width="180" style="text-align:center">
                        @Html.DisplayFor(model => model.TimeMandante)
                    </td>
                    <td align="center" width="30" style="text-align:center">
                        <div class="comment">
                            @Html.EditorFor(model => model.GolMandante)
                            @Html.ValidationMessageFor(model => model.GolMandante)
                        </div>
                          
                    </td>
                    <td align="center" width="5" style="text-align:center">
